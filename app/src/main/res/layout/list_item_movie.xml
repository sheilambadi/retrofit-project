<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardView.Light"
    android:id="@+id/movies_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    tools:ignore="contentDescription">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_img_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_card"
                android:layout_width="124dp"
                android:layout_height="165dp"
                android:scaleType="fitXY"
                android:layout_marginRight="8dp" />

            <ProgressBar
                android:id="@+id/pb_movies_list_img"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerInParent="true"/>

        </RelativeLayout>



        <TextView
            android:id="@+id/tv_movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/rl_img_card"
            tools:text="Peter Rabbit"/>

        <TextView
            android:id="@+id/tv_ratings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/rl_img_card"
            android:layout_below="@id/tv_movie_title"
            tools:text="8.0/10"/>



        <TextView
            android:id="@+id/tv_movie_genres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/rl_img_card"
            android:layout_below="@id/tv_ratings"
            tools:text="Comedy, Animation"/>

        <TextView
            android:id="@+id/tv_movie_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/rl_img_card"
            android:layout_below="@id/tv_movie_genres"
            android:maxLines="3"
            android:ellipsize="end"
            tools:text="These blocks can be organized to promote different types of content. Letâ€™s consider some possible"/>

        <ImageView
            android:id="@+id/img_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/like"
            android:layout_below="@id/tv_movie_description"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
         />
    </RelativeLayout>



</android.support.v7.widget.CardView>